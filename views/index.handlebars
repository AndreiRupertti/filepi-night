<html>

<head>
  <link rel="stylesheet" href="css/index.css">
  <link href="https://fonts.googleapis.com/css?family=Luckiest+Guy" rel="stylesheet">
</head>

  <body>
    <div id='content' class="content">
        <div id='holder' class="holder">
          {{#headline}}
          <div class="headline">
            <h1 id='headlineText'>{{ headline }}</h1>
          </div>
          {{/headline}}
          <div class="button">
            <input onclick="changeBackground()" type="button" name="descobrir" value="Descobrir">
          </div>
        </div>
    </div>
    <script type="text/javascript">
      function changeBackground() {
        min = Math.ceil(1);
        max = Math.floor(100);
        num = Math.floor(Math.random() * (max - min)) + min;
        if(num<33){
          document.getElementById('headlineText').textContent = "Pareamento com massagem!";
          document.getElementById('content').style.backgroundImage = "url('../public/images/paring_massuce.jpeg')";
        }else if(num>33 && num<66){
          document.getElementById('headlineText').textContent = "Vai vomitar na Pizza!";
          document.getElementById('content').style.backgroundImage = "url('../public/images/pizza_puke.jpg')";
        }else if(num>66){
          document.getElementById('headlineText').textContent = "Full Depress√£o";
          document.getElementById('content').style.backgroundImage = "url('../public/images/hello_darkness.jpeg')";
        }

      }
    </script>
  </body>
</html>
